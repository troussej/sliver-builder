{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2017",
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
    },
    "include": [
        "src/**/*.ts"
    ]
}